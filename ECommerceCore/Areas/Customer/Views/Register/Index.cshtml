<!--register page section-->
<div class="checkout_section" id="accordion">
    <div class="container">

        <form method="post">
            <div class="checkout_form">

                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-3">
                        <div class="checkout_form_input">
                            <label> Name   <span>*</span></label>
                            <input type="text" asp-for="Name">
                            <span asp-validation-for="Name" style="opacity:0.4; color:#DF2222;"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="checkout_form_input">
                            <label> Last name   <span>*</span></label>
                            <input type="text" asp-for="LastName">
                            <span asp-validation-for="LastName" style="opacity:0.4; color:#DF2222;"></span>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                </div>

                <div class="row">

                    <div class="col-md-6" style="margin-left:auto ; margin-right:auto ;">

                        <div class="checkout_form_input">
                            <label> Email Address   <span>*</span></label>
                            <input type="text" asp-for="Email">
                            <span asp-validation-for="Email" style="opacity:0.4; color:#DF2222;"></span>
                        </div>

                        <div class="checkout_form_input">
                            <label> Password   <span>*</span></label>
                            <div class="input-container">
                                <input type="password" id="passwordbox" asp-for="Password"/>
                                <a id="showpass" onclick="passfunction()" class="margin-for-button"><i class="fa fa-light fa-eye"></i></a>
                            </div>
                            <span asp-validation-for="Password" style="opacity:0.4; color:#DF2222;"></span>
                        </div>

                        <div class="checkout_form_input">
                            <label> Verify password   <span>*</span></label>
                            <div class="input-container">
                                <input type="password" id="passwordbox2" asp-for="ConfirmPassword"/>
                                <a id="showpass2" onclick="passfunction2()" class="margin-for-button"><i class="fa fa-light fa-eye"></i></a>
                            </div>
                            <span asp-validation-for="ConfirmPassword" style="opacity:0.4; color:#DF2222;"></span>
                        </div>           

                        <div>
                            <input id="approve" runat="server" name="checkbox" type="checkbox" style="margin-bottom: 15px;" /><label style="opacity:0.3;"> I confirm to join e-mail newsletter. </label>
                            <label style="opacity:0.2; margin-bottom:15px; font-size:12px;"> (Your account information will not be shared with anyone.) </label>
                        </div>

                        <div asp-validation-summary="ModelOnly" style="opacity:0.4; color:#DF2222; margin-bottom:15px;"></div>
                   
                        <div class="checkout_form_input">
                            <div class="shopping_continue_btn">
                                <button class="btn btn-primary btn-block">Register</button>
                            </div>
                        </div>              

                    </div>
                </div>

            </div>
        </form>

        <div class="row" style="margin-top:50px;">
            <div class="col-md-6" style="margin-left:auto ; margin-right:auto ;">
                <h5>
                    <div style="opacity:0.3; float: left;">Are you already a customer?</div>
                    <a href="/Customer/Login/Index/" style="color:#5b6c5a; margin-left:10px;"> Click here to login.</a>
                </h5>
            </div>
        </div>

    </div>
</div>

<script>
    function passfunction() {
        var x = document.getElementById("passwordbox");
        var y = document.getElementById("showpass");

        if (x.type === "password") {
            x.type = "text";
            y.innerHTML = "<i class='fa fa-light fa-eye-slash'></i>";
        } else {
            x.type = "password";
            y.innerHTML = "<i class='fa fa-light fa-eye'></i>";
        }
    }
</script>

<script>
    function passfunction2() {
        var x = document.getElementById("passwordbox2");
        var y = document.getElementById("showpass2");

        if (x.type === "password") {
            x.type = "text";
            y.innerHTML = "<i class='fa fa-light fa-eye-slash'></i>";
        } else {
            x.type = "password";
            y.innerHTML = "<i class='fa fa-light fa-eye'></i>";
        }
    }
</script>
<!--register page section end-->